{
    "id": "wordpress",
    "name": "WordPress",
    "description": "Sets up WordPress into the Dev Environment",
    "version": "1.0.1",
    "containerEnv": {
        "WP_CLI_CONFIG_PATH": "/etc/wp-cli/wp-cli.yaml"
    },
    "options": {
        "version": {
            "type": "string",
            "default": "latest",
            "proposals": [
                "latest",
                "nightly"
            ],
            "description": "WordPress version to install"
        }
    },
    "installsAfter": [
        "ghcr.io/sjinks/test-cs-images/wp-cli"
    ]
}